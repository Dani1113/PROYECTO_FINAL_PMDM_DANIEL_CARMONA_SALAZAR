<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondo"
    tools:context=".MenuActivity">

    <Button
        android:id="@+id/btNuevaVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:onClick="insertarVenta"
        android:text="@string/nueva_venta"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btBorrarVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="borrarVenta"
        android:text="@string/borrar_venta"
        app:layout_constraintEnd_toEndOf="@+id/btNuevaVenta"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btNuevaVenta"
        app:layout_constraintTop_toBottomOf="@+id/btNuevaVenta" />

    <Button
        android:id="@+id/btActualizarVenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:onClick="actualizarVenta"
        android:text="@string/actualizar_venta"
        app:layout_constraintEnd_toEndOf="@+id/btBorrarVenta"
        app:layout_constraintHorizontal_bias="0.588"
        app:layout_constraintStart_toStartOf="@+id/btBorrarVenta"
        app:layout_constraintTop_toBottomOf="@+id/btBorrarVenta" />

    <Button
        android:id="@+id/btMostrarInformacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:onClick="mostrarInformaciÃ³n"
        android:text="@string/mostrar_informacion"
        app:layout_constraintEnd_toEndOf="@+id/btActualizarVenta"
        app:layout_constraintHorizontal_bias="0.351"
        app:layout_constraintStart_toStartOf="@+id/btActualizarVenta"
        app:layout_constraintTop_toBottomOf="@+id/btActualizarVenta" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/pokeball"
        android:src="@drawable/pokeball"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>